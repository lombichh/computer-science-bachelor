        <!-- 1) General --> 
        <!-- Name the application --> 
        <display-name>AppName</display-name> 
        <description>
        Description
        </description> 

        <!-- 2) Servlets --> 
        <servlet> 
	        <!-- Identification --> 
	        <servlet-name>ServletName</servlet-name> 
	        <servlet-class>it.unibo.tw.web.ServletClass</servlet-class> 
        </servlet> 
        <!-- Map some URL's to the  servlet --> 
        <servlet-mapping> 
                <servlet-name>ServletName</servlet-name> 
                <url-pattern>/url</url-pattern> 
        </servlet-mapping> 

        <!-- 3) Welcome Files --> 
        <!-- Define, in order of preference, which file to show when no filename is defined in the path --> 
        <welcome-file-list> 
	        <welcome-file>welcome-file-1.html</welcome-file>
	        <welcome-file>welcome-file-1.html</welcome-file>
        </welcome-file-list> 
        
        <!-- 4) Error Handler --> 
        <!-- Define an error handler for 404 pages --> 
        <error-page> 
	        <error-code>404</error-code> 
	        <location>/errors/notfound.html</location> 
        </error-page> 
        <!-- Define an error handler for java.lang.Exception --> 
        <error-page> 
	        <exception-type>java.lang.Exception</exception-type> 
	        <location>/errors/exception.html</location> 
        </error-page> 
